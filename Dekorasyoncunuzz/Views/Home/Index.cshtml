@model Dekorasyoncunuz.Models.FilterModel
@{
    ViewData["Title"] = "Giriş";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content flex-column-fluid" id="kt_content">
    <div class="row">
        <div class="col-lg-12 col-xl-12 col-md-12 col-sm-12 col-xs-12">

            <div id="Giris">
                <h2 class="welcome">Dekorasyoncunuza geldiniz!</h2>
                <p class="yazi">Almak istediğiniz dekorasyonların fiyat aralığını, türünü ve markasını girerek hayalinizdeki mobilyaya ulaşabilirsiniz!</p>
                <br />
                <br />
                <form asp-controller="Dekorasyonlar" asp-action="Index">
                    <h3>Fiyat aralığınızı giriniz</h3>
                    <br />
                    <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12 col-xl-12">
                        <label id="price_text" class="col-form-label" for="price">12500₺</label>
                        <input id="price" asp-for="fiyat" type="range" value="12500" min="0" max="25000" step="500" oninput="HomePage.priceLabelText(this.value)" />
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="row">
                    </div>
                    <div class="form-check" id="Hepsini_sec">
                        <input asp-for="hepsi" type="checkbox" class="form-check-input" id="Hepsi">
                        <label class="form-check-label" for="Hepsi">Hepsini seç!</label>
                    </div>
                    <br />
                    <h3>Satın almayı düşündüğünüz dekorasyon türlerini seçiniz</h3>
                    <br />
                    <div class="form-check">
                        <input class="checkcins" asp-for="tv" type="checkbox" id="Tv_üniteleri">
                        <label class="form-check-label" for="Tv_üniteleri">Tv üniteleri</label>
                    </div>
                    <div class="form-check">
                        <input class="checkcins" asp-for="koltuk" type="checkbox" id="Koltuk_takımları">
                        <label class="form-check-label" for="Koltuk_takımları">Koltuk takımları</label>
                    </div>
                    <div class="form-check">
                        <input class="checkcins" asp-for="yatak" type="checkbox" id="Yatak_odası_takımları">
                        <label class="form-check-label" for="Yatak_odası_takımları">Yatak odası takımları</label>
                    </div>
                    <div class="form-check">
                        <input class="checkcins" asp-for="yemek" type="checkbox" id="Yemek_odası_takımları">
                        <label class="form-check-label" for="Yemek_odası_takımları">Yemek odası takımları</label>
                    </div>
                    <br />
                    <br />
                    <br />
                    <h3>Satın almayı düşündüğünüz markaları seçiniz</h3>
                    <br />
                    <div class="form-check">
                        <input class="checkmarka" asp-for="vivense" type="checkbox" id="Vivense">
                        <label class="form-check-label" for="Vivense">Vivense</label>
                    </div>
                    <div class="form-check">
                        <input class="checkmarka" asp-for="divanev" type="checkbox" id="Divanev">
                        <label class="form-check-label" for="Divanev">Divanev</label>
                    </div>
                    <div class="form-check">
                        <input class="checkmarka" asp-for="modalife" type="checkbox" id="Modalife">
                        <label class="form-check-label" for="Modalife">Modalife</label>
                    </div>
                    <div class="form-check">
                        <input class="checkmarka" asp-for="evmoda" type="checkbox" id="Ev_moda">
                        <label class="form-check-label" for="Ev_moda">Ev moda</label>
                    </div>
                    <br />
                    <br />
                    <br />
                    <button type="submit" class="btn btn-danger">
                        <a id="btn_text">Getir</a>
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="~/js/Custom/Home.js"></script>